<h1>Listing disputes</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Policy name</th>
      <th>Policy text</th>
      <th>Policy link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @disputes.each do |dispute| %>
      <tr>
        <td><%= dispute.company %></td>
        <td><%= dispute.policy_name %></td>
        <td><%= dispute.policy_text %></td>
        <td><%= dispute.policy_link %></td>
        <td><%= link_to 'Show', dispute %></td>
        <td><%= link_to 'Edit', edit_dispute_path(dispute) %></td>
        <td><%= link_to 'Destroy', dispute, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dispute', new_dispute_path %>
